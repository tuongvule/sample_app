<header class="navbar navbar-fixed-top navbar-inverse">
<div class="container">
  <%= link_to t("pages.header.sample_app"), "#", id: "logo" %>

  <nav>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to t("pages.application.english"), locale: :en %></li>
      <li><%= link_to t("pages.application.vietnamese"), locale: :vi %></li>
      <li><%= link_to t("pages.header.home"), root_path %></li>
      <li><%= link_to t("pages.header.help"), static_pages_help_path %></li>
      <li><%= link_to t("pages.header.users"), users_path %></li>
      <% if logged_in? %>
        <li><%= link_to current_user.name%></li>
        <li><%= link_to t("pages.header.profile"), current_user %></li>
        <li><%= link_to t("pages.header.settings"), edit_user_path(current_user) %></li>
        <li> <%= link_to t("pages.header.logout"), logout_path, method: :delete %></li>
      <% else %>
        <li><%= link_to t("pages.header.login"), login_path %></li>
      <% end %>
    </ul>
  </nav>
</div>
</header>
